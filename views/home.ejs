<%- include("partials/header") %>

<%- include("partials/navbar") %>
  
    <!-- Hero Section -->
    <main class="flex-grow container mx-auto px-4 py-12">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">Welcome</h1>
        
        <% if (user) { %>
          <div class="bg-white p-8 rounded-lg shadow-md mb-8">
            <p class="text-xl text-gray-700 mb-4">Hello, <span class="font-semibold text-blue-600"><%= user.name %></span>!</p>
            <p class="text-gray-600">You have full access to member features.</p>
            <% if (isAdmin) { %>
              <div class="mt-6">
                <a href="/admin" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition transform hover:-translate-y-1">
                  Go to Admin Panel
                </a>
              </div>
            <% } %>
          </div>
        <% } else { %>
          <div class="bg-white p-8 rounded-lg shadow-md">
            <p class="text-xl text-gray-700 mb-6">Please login or sign up to access member features.</p>
            <div class="flex justify-center space-x-4">
              <a href="/login" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition transform hover:-translate-y-1">
                Login
              </a>
              <a href="/signup" class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-6 rounded-lg transition transform hover:-translate-y-1">
                Sign Up
              </a>
            </div>
          </div>
        <% } %>

      </div>
    </main>

<%- include("partials/footer") %>